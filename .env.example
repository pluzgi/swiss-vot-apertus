# Environment Configuration
ENVIRONMENT=development

# Swisscom Apertus API Configuration
APERTUS_API_KEY=your_apertus_api_key_here
APERTUS_API_URL=https://api.swisscom.com/apertus/v1

# Database Configuration
# For local development (using Docker PostgreSQL)
DATABASE_URL=postgresql://swiss_voting:dev_password@postgres:5432/swiss_voting_db

# For production (using Railway PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Local PostgreSQL Settings (Docker)
POSTGRES_USER=swiss_voting
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=swiss_voting_db

# ChromaDB Configuration
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Application Settings
LOG_LEVEL=info
DEBUG=true

# OpenWebUI Settings
WEBUI_SECRET_KEY=your_secret_key_here

# Optional: Embedding Model
EMBEDDING_MODEL=paraphrase-multilingual-mpnet-base-v2

# Optional: RAG Settings
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
